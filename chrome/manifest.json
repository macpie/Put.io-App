{
  "name": "Put.io Extension",
  "short_name": "putio",
  "version": "3.0.0",
  "manifest_version": 2,
  "description": "Extension for put.io. Add torrent directly by right clicking, view your account informations",
  "permissions": [
    "http://*/",
    "https://*/",
    "contextMenus",
    "notifications"
  ],
  "web_accessible_resources": [
    "index.html"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "index.html"
  },
  "background": {
    "page": "background.html"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
